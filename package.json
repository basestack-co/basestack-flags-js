{
  "name": "@basestack/flags-js",
  "version": "1.0.6",
  "description": "Feature Flags SDK for JavaScript",
  "repository": "https://github.com/basestack-co/basestack-flags-js",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --config tsdown.config.ts",
    "dev": "tsdown --config tsdown.config.ts --watch",
    "clean": "node_modules && rm -rf dist",
    "update:deps": "bun update -i",
    "lint": "bunx biome lint .",
    "format": "bunx biome format --write .",
    "check": "bunx biome check --write .",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest watch",
    "prepublishOnly": "bun run lint && bun run test && bun run build",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "feature-flags",
    "feature-flag-sdk",
    "feature-flag-management",
    "feature-flag-sdk-js",
    "basestack"
  ],
  "author": "Basestack",
  "license": "MIT",
  "packageManager": "bun@1.3.2",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "tsdown": "^0.16.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.9"
  }
}
